{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "client": "cd client && yarn start",
    "server": "nodemon ./bin/www",
    "dev": "concurrently --kill-others-on-fail 'yarn server' 'yarn client'",
    "lint": "cd client && yarn eslint '../**/*.+(js|jsx)' --ignore-pattern node_modules/",
    "lint:fix": "cd client && yarn eslint '../**/*.+(js|jsx)' --ignore-pattern node_modules/ --fix",
    "format": "cd client && yarn prettier './**/*.+(json|css|md)' '../src/**/*.+(json|css|md)' '../public/**/*.+(json|css|md)' '../*.+(json|css|md)' -c",
    "format:fix": "cd client && yarn prettier './**/*.+(json|css|md)' '../src/**/*.+(json|css|md)' '../public/**/*.+(json|css|md)' '../*.+(json|css|md)' --write"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.1.0",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "mongoose": "^5.7.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "eslint": "6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-flowtype": "3.13.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "prettier": "^1.18.2"
  }
}
