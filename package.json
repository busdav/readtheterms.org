{ 
  "name": "rtt",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "12.10.0",
    "npm": "6.11.3",
    "yarn": "1.17.3"
  },
  "scripts": {
    "start": "node ./bin/www",
    "client": "cd client && yarn start",
    "server": "nodemon ./bin/www",
    "dev": "concurrently --kill-others-on-fail 'yarn server' 'yarn client'",
    "test": "jest",
    "lint": "yarn eslint app.js bin/www src/ client/src/",
    "lint:fix": "yarn eslint app.js bin/www src/ client/src/ --fix",
    "format": "yarn prettier '**/*.+(json|html|css|md)' --check",
    "format:fix": "yarn prettier '**/*.+(json|html|css|md)' --write",
    "heroku-postbuild": "cd client && yarn && yarn run build"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.1.0",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-flowtype": "3.13.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.9",
    "jest": "24.8.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  }
}
