{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "client": "cd client && yarn start",
    "server": "nodemon ./bin/www",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "lint": "cd client && yarn eslint \"../**/*.+(js|jsx)\" --ignore-pattern node_modules/",
        "lint:fix": "cd client && yarn eslint \"../**/*.+(js|jsx)\" --ignore-pattern node_modules/ --fix"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.1.0",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "mongoose": "^5.7.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        1,
        {
          "ignoreSiblings": true,
          "argsIgnorePattern": "res|next|^err"
        }
      ]
    }
  }
}
